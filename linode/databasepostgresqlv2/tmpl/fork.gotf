{{ define "database_postgresql_v2_fork" }}

resource "linode_database_postgresql_v2" "source" {
    label = "{{.Label}}"
    region = "{{ .Region }}"
    type = "{{ .Type }}"
    engine_id = "{{ .EngineID }}"
}

resource "linode_database_postgresql_v2" "fork" {
    label = "{{.Label}}-fork"
    region = "{{ .Region }}"
    type = "{{ .Type }}"
    engine_id = "{{ .EngineID }}"

    fork_source = linode_database_postgresql_v2.source.id
}

{{ end }}
